<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imagecycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <FrameLayout 
        android:id="@+id/language_frame"
        android:layout_width="fill_parent"
        android:layout_height="180px"
        android:layout_marginBottom="135px"
        android:layout_alignParentBottom="true">
        
        <ImageView
            android:id="@+id/body_background"
            android:layout_width="0px"
            android:layout_height="90px"
            android:src="@drawable/body_background"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
        
		<ImageView
            android:id="@+id/trans_background1"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_marginLeft="75px"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/left" />
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:visibility="invisible"
		    android:layout_gravity="center" >
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_weight="1"
			    android:layout_height="fill_parent"
			    android:src="@drawable/rail_background"
			    android:visibility="invisible"  />
			<ImageView
			    android:id="@+id/rail_background1"
			    android:layout_width="wrap_content"
			    android:layout_weight="1"
			    android:layout_height="fill_parent"
			    android:src="@drawable/rail_background" />
			
			<ImageView
			    android:id="@+id/rail_background2"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/rail_background" />
			
			<ImageView
			    android:id="@+id/rail_background3"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/rail_background"
			    android:visibility="invisible" />
			
			<ImageView
			    android:id="@+id/rail_background4"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/rail_background"
			    android:visibility="invisible" />
			
			<ImageView
			    android:id="@+id/rail_background5"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/rail_background" />
			
			<ImageView
			    android:id="@+id/rail_background6"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/rail_background" />
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_weight="1"
			    android:layout_height="fill_parent"
			    android:src="@drawable/rail_background"
			    android:visibility="invisible"  />

		</LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="180px"
            android:orientation="horizontal"
            android:gravity="center" >
            
            <ImageView
                android:id="@+id/trans_background2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/left" />
	        <ImageView 
	            android:id="@+id/center_background"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:src="@drawable/center_background" />
	        <ImageView
                android:id="@+id/trans_background3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:src="@drawable/right" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/trans_background4"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="75px"
            android:src="@drawable/right" />
        
        <FrameLayout 
            android:id="@+id/language_tab"
	        android:layout_width="fill_parent"
	        android:layout_height="120px"
	        android:layout_gravity="center"
	        android:gravity="center" >

        </FrameLayout>
        
     	<TextView 
            android:id="@+id/language_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30px"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="34.5px"
            android:text="中文" />
        
    </FrameLayout>
    <ImageView 
        android:id="@+id/ok_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90px"
        android:src="@drawable/ok_background" />
    <FrameLayout
        android:id="@+id/logo_layout"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
     	<ImageView
     	    android:id="@+id/logo_background"
     	    android:layout_width="450px"
     	    android:layout_height="450px"
     	    android:src="@drawable/logo_background" />
	    <ImageView
	        android:id="@+id/logo"
	        android:layout_width="225px"
	        android:layout_height="225px"
	        android:layout_marginLeft="105px"
	        android:layout_marginTop="45px"/>
	   
    </FrameLayout>
