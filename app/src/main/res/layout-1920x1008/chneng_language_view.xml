    <FrameLayout 
          android:layout_width="1350px"
	        android:layout_height="450px"
	        android:layout_centerInParent="true"
		>
	    
        <ImageView
	        android:id="@+id/language_bg_pic"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="165px"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
	        android:visibility="invisible"
        	android:src="@drawable/sub_icon_shuiwu" />
	    <LinearLayout 
	        android:id="@+id/message"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/message_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="52.5px"
	            android:lineSpacingExtra="7.5px"
	            android:textStyle="bold"/>
	        <TextView 
	            android:id="@+id/message_body"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="45px"
	            android:layout_marginTop="7.5px"
	            android:layout_marginBottom="7.5px"
	            android:textStyle="bold|italic"
	            />
	        <TextView 
	            android:id="@+id/message_manager"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="67.5px"
	            android:lineSpacingExtra="7.5px"
	            android:textStyle="bold"
	            android:gravity="right"/>
	            
	    	</LinearLayout>
	</FrameLayout>
</RelativeLayout>
