<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     >
    
<FrameLayout
    android:id="@+id/movie_grid_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
 
<ImageView
    android:id="@+id/movie_grid_pic_border"
    android:layout_width="342px"
    android:layout_height="222px"
    android:background="@color/white"
    android:visibility="invisible"
    android:layout_gravity="center"
    />  
       
    
<ImageView
    android:id="@+id/movie_grid_pic"
    android:layout_width="340px"
    android:layout_height="220px"
    android:layout_gravity="center"
    />
    
<TextView
    android:visibility="invisible"
    android:id="@+id/movie_grid_text"
    android:layout_width="340px"
    android:layout_height="36px"
    android:layout_marginTop="185px"
    android:paddingLeft="4px"
    android:textColor="#ffffff"
    android:background="#a3000000" />

</FrameLayout>

<com.clearcrane.util.MarqueeTextView
    android:id="@+id/movie_grid_name"
    android:layout_width="225px"
    android:layout_height="32px"
    android:layout_marginTop="12px"
    android:focusable="true"
    android:textColor="#ffffff"
    android:layout_gravity="center_horizontal"
    android:gravity="center"/>
</LinearLayout>
