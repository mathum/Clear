<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

 	<RelativeLayout 
	     android:id="@+id/weather"
	     android:layout_width="200dp"
	     android:layout_height="200dp" >
	
	     <TextView
	         android:id="@+id/weather_text"
	         android:layout_width="wrap_content"
	         android:layout_height="25dp"
	         android:textSize="20sp"
	         android:text="12~22C"
	         android:layout_alignParentRight="true" />
	     
	     <ImageView
	         android:id="@+id/weather_pic"
	         android:layout_width="20dp"
	         android:layout_height="25dp"
	         android:src="@drawable/weather_pic"
	         android:layout_toLeftOf="@+id/weather_text"/>
	     <TextView
	         android:id="@+id/weather_day"
	         android:layout_width="wrap_content"
	         android:layout_height="25dp"
	         android:textSize="20sp"
	         android:layout_below="@+id/weather_pic"
	         android:layout_alignParentRight="true"
	         android:text="Wethenday, March 19" />

    </RelativeLayout>	        
    <TextView 
        android:id="@+id/weather_time"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="top"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top"
        android:lineSpacingExtra="10dp"
        android:textSize="50sp" />
     
</LinearLayout>