<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout 
        android:id="@+id/picture_list_whole"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	 >
	 
     <ImageView
       android:id="@+id/cover_video_background"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="fitXY"
       android:src="@drawable/body_background" />
	 
    <ImageView 
        android:id="@+id/pictureView"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="fitXY"/> 
	    
	<FrameLayout 
        android:id="@+id/picture_list_foreground"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	 >
	 
	<ImageView 
        android:id="@+id/shuiwu_layer"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="fitXY"
	    android:src="@drawable/pic_list_shuiwu"/> 
	    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:layout_marginLeft="60dp">
	    
        <LinearLayout 
	        android:id="@+id/pictureTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:layout_marginTop="60dp">
		    <ImageView 
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			     android:layout_marginTop="20dp"
			    android:src="@drawable/picture_list_left_arrow"
			    />   
			<TextView
			    android:id="@+id/pictureTitleText"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:textSize="60sp"
			    />
	    </LinearLayout>  
       
        <FrameLayout
            android:layout_width="match_parent"
		    android:layout_height="match_parent" >
			
	        <ListView
		        android:id="@+id/pictureCategoryList"
		        android:layout_width="280dp"
		        android:layout_height="match_parent"
		        android:layout_marginTop="60dp"
		        android:layout_marginBottom="50dp"
		        android:scrollbars="none"
		        android:cacheColorHint="#FFFFFF"
		        android:listSelector="@drawable/pic_list_item_select"
		        android:divider="#FFFFFF"
		        android:dividerHeight="0dp"
		        android:transcriptMode="alwaysScroll"
		         />
	        
	        <FrameLayout
	            android:id="@+id/pictureListTextIntroduceFL"
	            android:layout_width="match_parent"
		    	android:layout_height="match_parent">
		    	
	            <ImageView
			        android:id="@+id/piclist_shuiwu_bg_pic"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="700dp"
			        android:layout_marginTop="350dp"
			        android:layout_marginRight="60dp"
			        android:layout_marginBottom="60dp"
			        android:adjustViewBounds="true"
			        android:scaleType="fitXY"
		        	/>
	            
	                       
		        <TextView
		            android:id="@+id/pictureListViewText"
		            android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="900dp"
			        android:layout_marginTop="350dp"
			        android:layout_marginRight="60dp"
			        android:layout_marginBottom="60dp" 
			        android:textSize="20sp" 
			        android:textColor="#ffffff"
			        />
			      
	        </FrameLayout>
	        	
       </FrameLayout> 
    </LinearLayout>    
    
    
    <ImageView 
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="visible"
	    android:layout_gravity="center_vertical|left"
	    android:layout_marginLeft="5dp"
	    android:src="@drawable/pic_list_left_arrow"
	    /> 
	    
    <ImageView 
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="visible"
	    android:layout_gravity="center_vertical|right"
	    android:layout_marginRight="20dp"
	    android:src="@drawable/pic_list_right_arrow"
	    /> 
	    
    <ImageView 
        android:id="@+id/bottom_notice"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="visible"
	    android:layout_gravity="center_horizontal|bottom"
	    android:layout_marginBottom="10dp"
	    /> 
	
    </FrameLayout>
	</FrameLayout>

</LinearLayout>
