<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/ordering_details_focus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:src="@drawable/ordering_detail_focus_bg" />
    <TextView 
        android:id="@+id/ordering_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
      	android:textSize="20sp"
      	android:layout_toRightOf="@+id/ordering_details_focus"
      	android:textColor="#FFFFFF"/>
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right">
        <TextView 
            android:id="@+id/ordering_details_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineSpacingExtra="5dp"
	      	android:textSize="20sp"
	      	android:textColor="#FFFFFF"/>
        <LinearLayout
            android:id="@+id/ordering_numpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >
            <ImageView
                android:id="@+id/ordering_numpick_left"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:src="@drawable/left" />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
<!--                 <ImageView
                    android:id="@+id/ordering_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/numpick_fir"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1" />
                <TextView
                    android:id="@+id/numpick_sec"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="2" />
                <TextView
                    android:id="@+id/numpick_thr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3" /> -->
                <TextView
                    android:id="@+id/numpick_four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="4" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ordering_numpick_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:src="@drawable/right" />
        </LinearLayout>
    </FrameLayout>
    <ImageView 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:scaleType="fitXY"
	    android:layout_below="@+id/ordering_details_focus"
	    android:src="@drawable/ordering_detail_line"/>

</RelativeLayout>
