<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="720px"
    android:background="@drawable/tv_series_list_bg_1280" >

    <LinearLayout
        android:id="@+id/picText_Page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/logo_menu"
            android:layout_width="fill_parent"
            android:layout_height="93px"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/picText_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:focusable="true"
                android:textColor="#f0f031"
                android:text=""
                android:textSize="24px" />

            <RelativeLayout
                android:id="@+id/time_logo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="117px"
                    android:layout_marginTop="10px"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/picText_list_layout"
                android:layout_width="240px"
                android:layout_height="match_parent"
                android:layout_marginBottom="28px"
                android:layout_marginLeft="35px"
                android:layout_marginTop="15px"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/picText_sets_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="28px"
                android:layout_marginRight="40px"
                android:layout_marginTop="15px"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275px" >

        <ImageView
            android:id="@+id/gradual_change_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_demand_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pagination"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pagination_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="560px"
            android:layout_marginTop="660px" />
    </RelativeLayout>

</FrameLayout>