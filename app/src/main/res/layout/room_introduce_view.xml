<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <RelativeLayout 
        android:id="@+id/room_title"
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <LinearLayout 
            android:id="@+id/room_title_left"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="bottom|right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/room_title_pic"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:layout_gravity="bottom|right"
                android:src="@drawable/top_recommend_pic" />
            <!-- 
            <TextView 
                android:id="@+id/room_title_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                android:textSize="20sp"/>
             -->
        </LinearLayout>
        <TextView 
            android:id="@+id/room_title_kindname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:shadowColor="#000000"
	       android:shadowDx="0"
	       android:shadowDy="2"
	       android:shadowRadius="4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/room_title_left"
         />
        
        <TextView
            android:id="@+id/room_curFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="0/0" />
        
    </RelativeLayout>
    <ImageView 
        android:id="@+id/room_baseline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_recommend_baseline"/>
    <LinearLayout
        android:id="@+id/room_pic"
        android:layout_width="20000dp"
        android:layout_height="200dp"
        android:layout_marginLeft="200dp"
        android:scrollbars="vertical"
        android:orientation="horizontal">
        
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
		android:layout_height="match_parent">
        
         <ImageView
	        android:id="@+id/room_shuiwu_bg_pic"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="490dp"
	        android:layout_marginRight="180dp"
	        android:layout_marginBottom="110dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
	        android:visibility="invisible"
        	android:src="@drawable/sub_icon_shuiwu" />
         
         <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
            
             <TextView 
		        android:id="@+id/room_introduce"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="500dp"
		        android:layout_marginRight="200dp"
		        android:lineSpacingExtra="5dp"
		        android:ellipsize="end"
		        android:lines="7"
		        android:textSize="20sp"/>
		    <TextView
		        android:id="@+id/room_facility"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="500dp"
		        android:layout_marginRight="200dp"
		        android:lineSpacingExtra="5dp"
		        android:ellipsize="end"
		        android:lines="4"
		        android:textSize="20sp" />
		    <ImageView 
	            android:id="@+id/room_select"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:adjustViewBounds="true"
	            android:src="@drawable/top_recommend_command"/>
         </LinearLayout>
        
    </FrameLayout>
    
</LinearLayout>
