<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/perfect_music_isPlay"
            android:layout_width="25px"
            android:layout_height="25px"
            android:background="@drawable/music_play" />

        <TextView
            android:id="@+id/perfect_music_number"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/perfect_music_name"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>

        <TextView
            android:id="@+id/perfect_music_singer"
            android:layout_width="166px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>

        <TextView
            android:id="@+id/perfect_music_duration"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>