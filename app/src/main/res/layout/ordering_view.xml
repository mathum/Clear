<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/ordering_title"
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <LinearLayout 
            android:id="@+id/ordering_title_left"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="bottom|right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ordering_title_pic"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:layout_gravity="bottom|right"
                android:src="@drawable/top_recommend_pic" />
            <TextView
                android:id="@+id/ordering_title_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="订餐"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/ordering_title_foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ordering_title_left"/>
        <TextView
            android:id="@+id/ordering_curFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="第1条" />
        
    </RelativeLayout>
    <ImageView 
        android:id="@+id/ordering_baseline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_recommend_baseline"/>
    <LinearLayout
        android:id="@+id/ordering_food_pic"
        android:layout_width="20000dp"
        android:layout_height="200dp"
        android:layout_marginLeft="200dp"
        android:scrollbars="vertical"
        android:orientation="horizontal">
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ordering_shopcar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginRight="300dp"
            android:layout_gravity="left">
            <ImageView 
                android:id="@+id/ordering_car"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/shop_car"/>
            <TextView
                android:id="@+id/ordering_car_count"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center"           
                android:background="@drawable/shop_car_count"/>
        </RelativeLayout>
        <ImageView 
            android:id="@+id/ordering_car_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/ordering_down"/>
        <TextView 
            android:id="@+id/ordering_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="30sp"
            android:layout_marginLeft="300dp"
            android:text="共计:0" />
    </LinearLayout>
    <ImageView 
	    android:id="@+id/ordering_detail_baseline"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:layout_marginLeft="200dp"
	    android:layout_marginRight="200dp"
	    android:src="@drawable/ordering_detail_line"/>
    <LinearLayout 
        android:id="@+id/ordering_details_list"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ordering_details"
            android:layout_width="fill_parent"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
	        android:layout_height="4000dp"
	        android:orientation="vertical" >
        </LinearLayout>
   	    <ImageView 
	        android:id="@+id/ordering_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:layout_gravity="center"
	        android:src="@drawable/ordering_ok"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ordering_command"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/ordering_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/top_recommend_command"/>
    </LinearLayout>

</LinearLayout>
