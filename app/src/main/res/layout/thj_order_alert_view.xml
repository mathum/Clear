<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="400dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/thj_orderlist_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:gravity="center"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/thj_selected_dishes"
            android:layout_marginLeft="12px" 
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18px"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/thj_selected_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="18px" />

        <TextView
            android:id="@+id/thj_dinner_dishlist" 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18px"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        >
	    <ListView
	        android:listSelector="@drawable/thj_button_selector" 
	        android:id="@+id/thj_order_listview" 
	        android:layout_width="400dp"
	        android:layout_height="match_parent"
	        />        
        <TextView
            android:id="@+id/thj_dinner_money" 
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <Button 
        android:id="@+id/money_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/thj_money_button_selector"
        android:layout_gravity="center"
        android:textColor="@drawable/itemcolor"
        />
    </LinearLayout>
</LinearLayout>
