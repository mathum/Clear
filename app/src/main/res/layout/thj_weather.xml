<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 <ImageView
        android:id="@+id/thj_weather_mainbackground"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>
       
    <TextView
        android:id="@+id/thj_weather_title"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="55px"
        android:layout_marginLeft="190px"
        android:shadowColor="#000000"
       android:shadowDx="0"
       android:shadowDy="2"
       android:shadowRadius="4"
        android:textSize="38px"/>
    
    <ImageView
        android:id="@+id/thj_weather_china_sel"
        android:layout_width="128px"
    	android:layout_height="50px"
    	android:layout_marginTop="109px"
        android:layout_marginLeft="193px"
        android:scaleType="fitXY"
        android:alpha="100"/>
     <TextView
        android:id="@+id/thj_weather_china"
        android:layout_width="128px"
    	android:layout_height="50px"
        android:layout_marginTop="109px"
        android:layout_marginLeft="193px"
        android:gravity="center"
        android:textSize="25px"
        android:text="国内"/>
     
     <ImageView
        android:id="@+id/thj_weather_global_sel"
        android:layout_width="128px"
    	android:layout_height="50px"
    	android:layout_marginTop="109px"
        android:layout_marginLeft="320px"
        android:visibility="invisible"
        android:scaleType="fitXY"/>
     
      <TextView
        android:id="@+id/thj_weather_global"
        android:layout_width="128px"
    	android:layout_height="50px"
        android:layout_marginTop="109px"
        android:layout_marginLeft="320px"
        android:gravity="center"
        android:textSize="25px"
        android:text="国际"/>
      
      
      
      <ImageView
        android:id="@+id/thj_weather_lefticon"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="119px"
        android:layout_marginLeft="173px"
        android:src="@drawable/iconleft"/>
      
      <ImageView
        android:id="@+id/thj_weather_righticon"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="119px"
        android:layout_marginLeft="454px"
        android:src="@drawable/iconright"/>
      
      <ListView
        android:id="@+id/weather_item_list"
        android:layout_width="300px"
        android:layout_height="298px"
        android:layout_marginLeft="168px"
        android:layout_marginTop="165px"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="2dp"/>
    
    <ImageView
        android:id="@+id/thj_weather_image"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />
        
     <ListView
        android:id="@+id/cityList"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_marginTop="165px"
        android:layout_marginBottom="141px"
        android:scrollbars="none"
        android:cacheColorHint="#FFFFFF"
        android:listSelector="@drawable/button"
        android:divider="#FFFFFF"
        android:dividerHeight="0dp"
        android:transcriptMode="alwaysScroll"
         />
    
    <ImageView
        android:id="@+id/thj_weather_left"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="342px"
        android:layout_marginLeft="130px"
        android:visibility="visible"/>
    
    <ImageView
        android:id="@+id/thj_weather_right"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="342px"
        android:layout_marginLeft="1136px"
        android:visibility="visible"/>
    
     <TextView
        android:id="@+id/thj_weather_select"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="579px"
        android:layout_marginLeft="930px"
        android:textSize="18px"
        android:text="选择"/>
     
     <TextView
        android:id="@+id/thj_weather_back"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="579px"
        android:layout_marginLeft="1027px"
        android:textSize="18px"
        android:text="返回"/>
     
     <TextView
         android:id="@+id/thj_weather_today"
         android:layout_width="151px"
         android:layout_height="wrap_content"
         android:layout_marginLeft="486px"
         android:layout_marginTop="180px"
         android:textSize="18px"
         android:gravity="center"
         />
     <TextView
         android:id="@+id/thj_weather_tomorrow"
         android:layout_width="151px"
         android:layout_height="wrap_content"
         android:layout_marginLeft="808px"
         android:layout_marginTop="247px"
         android:textSize="17px"
         android:gravity="center"
         />
     <TextView
        android:id="@+id/thj_weather_day3"
        android:layout_width="151px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="958px"
        android:layout_marginTop="247px"
        android:gravity="center"
        android:textSize="17px" />

    <ImageView
        android:id="@+id/thj_weather_today_pic"
        android:layout_width="142px"
        android:layout_height="118px"
        android:layout_marginLeft="604px"
        android:layout_marginTop="256px"
         />

    <ImageView
        android:id="@+id/thj_weather_tomorrow_pic"
        android:layout_width="66px"
        android:layout_height="57px"
        android:layout_marginLeft="852px"
        android:layout_marginTop="311px"
         />

    <ImageView
        android:id="@+id/thj_weather_day3_pic"
        android:layout_width="66px"
        android:layout_height="57px"
        android:layout_marginLeft="1003px"
        android:layout_marginTop="311px"
         />
    
    <TextView
        android:id="@+id/thj_weather_today_temp"
        android:layout_width="302px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="524px"
        android:layout_marginTop="390px"
        android:gravity="center"
        android:textSize="30px" />

    <TextView
        android:id="@+id/thj_weather_tomorrow_temp"
        android:layout_width="151px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="808px"
        android:layout_marginTop="416px"
        android:gravity="center"
        android:textSize="18px" />

    <TextView
        android:id="@+id/thj_weather_day3_temp"
        android:layout_width="151px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="958px"
        android:layout_marginTop="416px"
        android:gravity="center"
        android:textSize="18px" />
    <TextView
        android:id="@+id/thj_weather_today_wind"
        android:layout_width="302px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="524px"
        android:layout_marginTop="474px"
        android:gravity="center"
        android:textSize="18px" />
    <TextView
        android:id="@+id/thj_weather_today_wea"
        android:layout_width="302px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="524px"
        android:layout_marginTop="442px"
        android:gravity="center"
        android:textSize="20px" />
    <TextView
        android:id="@+id/thj_weather_tomorrow_wea"
        android:layout_width="151px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="808px"
        android:layout_marginTop="444px"
        android:gravity="center"
        android:textSize="18px" />
    <TextView
        android:id="@+id/thj_weather_day3_wea"
        android:layout_width="151px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="958px"
        android:layout_marginTop="444px"
        android:gravity="center"
        android:textSize="18px" />
</FrameLayout>
