<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/trip_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <TextView 
        android:id="@+id/trip_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:layout_marginTop="579px"
        android:layout_marginLeft="630px"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/thj_trip_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1027px"
        android:layout_marginTop="579px"
        android:textColor="@color/white"
        android:textSize="18px" />

    <TextView
        android:id="@+id/thj_trip_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="930px"
        android:layout_marginTop="579px"
        android:textColor="@color/white"
        android:textSize="18px" />

    <ImageView
        android:id="@+id/trip_selected_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="160px"
        android:src="@drawable/live_10" />

    <ImageView
        android:id="@+id/trip_selected_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1140px"
        android:layout_marginTop="160px"
        android:src="@drawable/live_11" />

    <LinearLayout
        android:layout_width="206px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="191px"
        android:layout_marginTop="116px"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/trip_selected_style"
            android:layout_width="157px"
            android:layout_height="102px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/trip_selected_name"
            android:layout_width="157px"
            android:layout_height="30px"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="26px" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thj_trip_linear_style"
        android:layout_width="3000px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="374px"
        android:layout_marginTop="116px"
        android:orientation="horizontal"
         >
    </LinearLayout>
    <TextView 
        android:id="@+id/thj_trip_tag"
        android:layout_width="670px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="412px"
        android:layout_marginTop="280px"
        android:textSize="26px"
        android:textColor="@color/white"
        />

</FrameLayout>