<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_gravity="right|top"
        android:gravity="center"
        android:layout_marginRight="@dimen/horizontal_margin_1"
        android:layout_marginTop="@dimen/vertical_margin_1"
        android:orientation="horizontal" 
        android:visibility="visible"
        android:background="@color/deep_transparency">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_margin_left_small_1"
            android:text="helloworld"
            android:textColor="#ffffff"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_minute_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_margin_left_small_1"
            android:textColor="@color/count_down_digit"
            android:textSize="@dimen/item_content_font_size_1" />

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_margin_left_small_1"
            android:text="@string/minute"
            android:textColor="@color/count_down_text"
            android:textSize="@dimen/item_content_font_size_1" />

        <TextView
            android:id="@+id/tv_second_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_margin_left_small_1"
            android:textColor="@color/count_down_digit"
            android:textSize="@dimen/item_content_font_size_1" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_margin_left_small_1"
            android:layout_marginRight="@dimen/textview_margin_left_small_1"
            android:text="@string/second"
            android:textColor="@color/count_down_text"
            android:textSize="@dimen/item_content_font_size_1" />
    </LinearLayout>

</FrameLayout>