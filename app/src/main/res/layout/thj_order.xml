<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    <ImageView
        android:id="@+id/dinner_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <TextView
        android:id="@+id/dinner_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="630px"
        android:layout_marginTop="579px"
        android:textColor="@color/white"
        android:textSize="18px" />
    
    <ImageView
    android:id="@+id/dinner_selected_left"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="130px"
    android:layout_marginTop="160px"
    android:src="@drawable/live_10"
    />
    <ImageView
    android:id="@+id/dinner_selected_right"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1140px"
    android:layout_marginTop="160px"
    android:src="@drawable/live_11"
    />
    <LinearLayout
        android:layout_marginLeft="191px"
        android:layout_marginTop="116px"
        android:layout_width="206px"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dinner_selected_dish_style"
            android:layout_width="157px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/dinner_selected_dish_name"
            android:textColor="@color/black"
            android:layout_width="157px"
            android:layout_height="30px"
            android:gravity="center"
            android:textSize="26px"
            android:ellipsize="marquee"
            android:singleLine="true" 
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            />

    </LinearLayout>
    <LinearLayout
    android:layout_marginLeft="374px"
    android:layout_marginTop="116px"
    android:id="@+id/thj_linear_style"
    android:layout_width="3000px"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    </LinearLayout>
    <ImageView
    android:id="@+id/dinner_selected_dish_pic"    
    android:layout_width="370px"
    android:layout_height="293px"
    android:layout_marginLeft="366px"
    android:layout_marginTop="269px"
    android:scaleType="fitXY"
    />
    <ListView
    android:id="@+id/item_list"
    android:layout_width="196px"
    android:layout_height="298px"
    android:layout_marginLeft="168px"
    android:layout_marginTop="269px"
    android:cacheColorHint="@android:color/transparent"
    android:divider="@null"
    android:dividerHeight="2dp"
    android:listSelector="@drawable/thj_button_selector" 
    />
    <TextView
    android:id="@+id/dinner_dish_name"
    android:textSize="23px" 
    android:layout_width="365px"
    android:layout_height="48px"
    android:layout_marginLeft="741px"
    android:layout_marginTop="269px"
    />
    <TextView
    android:id="@+id/dinner_price_title"
    android:textSize="23px" 
    android:layout_width="175px"
    android:layout_height="48px"
    android:layout_marginLeft="741px"
    android:layout_marginTop="317px"
    />
    <TextView
    android:id="@+id/dinner_price_body"
    android:textSize="23px"
    android:layout_width="175px"
    android:layout_height="48px" 
    android:layout_marginLeft="911px"
    android:layout_marginTop="317px"
    />
    <TextView
        android:id="@+id/dish_info"
        android:layout_width="350px"
        android:layout_height="202px"
        android:layout_marginLeft="741px"
        android:layout_marginTop="363px"
        android:textSize="18px" 
        />
<TextView
        android:id="@+id/dinner_back" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1027px"
        android:layout_marginTop="579px"
        android:textSize="18px"
        />
        <TextView 
        android:id="@+id/dinner_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="930px"
        android:layout_marginTop="579px"
        android:textSize="18px"
        />
        <TextView 
        android:id="@+id/dinner_ok"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="785px"
        android:layout_marginTop="579px"
        android:textSize="18px"
        />
        <ImageView
        android:id="@+id/dinner_selected"    
        android:layout_width="12px"
        android:layout_height="12px"
        android:layout_marginLeft="205px"
        android:layout_marginTop="587px"
        android:src="@drawable/green_point"
        />
        <TextView 
        android:id="@+id/dinner_selectedtext"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225px"
        android:layout_marginTop="579px"
        android:textSize="18px"
        />
        <TextView 
        android:id="@+id/dinner_zero"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360px"
        android:layout_marginTop="579px"
        android:textSize="18px"
        />

</FrameLayout>
