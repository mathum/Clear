<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/thj_pictur_page_mainbackground"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/picture_page"/>"
    
    <ImageView
        android:id="@+id/thj_pictur_page_image"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:layout_gravity="center"
        />
    
    <TextView
        android:id="@+id/thj_picture_page_title"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="55px"
        android:layout_marginLeft="190px"
        android:shadowColor="#000000"
       android:shadowDx="0"
       android:shadowDy="2"
       android:shadowRadius="4"
        android:textSize="38px"/>
    
    <TextView
        android:id="@+id/thj_picture_page_num"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="579px"
        android:layout_gravity="center_horizontal"
        android:textSize="24px"/>
    
    <ImageView
        android:id="@+id/thj_picture_page_left"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="342px"
        android:layout_marginLeft="130px"
        android:visibility="visible"
        android:src="@drawable/iconleft"/>
    
    <ImageView
        android:id="@+id/thj_picture_page_right"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="342px"
        android:layout_marginLeft="1136px"
        android:visibility="visible"
        android:src="@drawable/iconright"/>
    
     <TextView
        android:id="@+id/thj_picture_page_select"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="579px"
        android:layout_marginLeft="930px"
        android:textSize="18px"/>
     
     <TextView
        android:id="@+id/thj_picture_page_back"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="579px"
        android:layout_marginLeft="1027px"
        android:textSize="18px"/>
    

</FrameLayout>
