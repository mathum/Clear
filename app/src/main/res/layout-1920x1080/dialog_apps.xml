	    <TextView 
	        android:id="@+id/apps_page_text"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content"
	        android:layout_marginBottom="13dip"
	        android:layout_alignParentBottom="true" 
	        android:layout_centerHorizontal="true"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/apps_page_textsize" />
	    <TextView 
	        android:id="@+id/apps_sel_text" 
	        android:text="选择" 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content" 
	        android:layout_marginRight="230dip"
	        android:layout_marginBottom="13dip"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true" 
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/apps_help_textsize" />
	    <TextView 
            android:id="@+id/apps_ok_text" 
            android:text="确认" 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:layout_marginRight="140dip"
            android:layout_marginBottom="13dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" 
            android:textColor="#FFFFFF"
            android:textSize="@dimen/apps_help_textsize" />
	    <TextView 
            android:id="@+id/apps_back_text" 
            android:text="返回" 
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content" 
            android:layout_marginRight="50dip"
            android:layout_marginBottom="13dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" 
            android:textColor="#FFFFFF"
            android:textSize="@dimen/apps_help_textsize" />
    </RelativeLayout>
    
    
