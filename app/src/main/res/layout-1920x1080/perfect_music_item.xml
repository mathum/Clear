<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/perfect_music_isPlay"
            android:layout_width="37.5px"
            android:layout_height="37.5px"
            android:background="@drawable/music_play" />

        <TextView
            android:id="@+id/perfect_music_number"
            android:layout_width="60px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/perfect_music_name"
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>

        <TextView
            android:id="@+id/perfect_music_singer"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>

        <TextView
            android:id="@+id/perfect_music_duration"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>