    <FrameLayout 
          android:layout_width="1350px"
	        android:layout_height="450px"
	        android:layout_centerInParent="true"
		>
	    
        <ImageView
	        android:id="@+id/language_bg_pic"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="120px"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
        	android:src="@drawable/sub_icon_shuiwu" />
	    <LinearLayout 
	        android:id="@+id/message"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/message_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="52.5px"
	            android:layout_marginLeft="45px"
	            android:layout_marginTop="45dp"
	            android:lineSpacingExtra="7.5px"
	            android:textStyle="bold"/>
	        <TextView 
	            android:id="@+id/message_body"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="45px"
	            android:layout_marginTop="7.5px"
	            android:layout_marginBottom="7.5px"
	            android:layout_marginLeft="45px"
	            android:layout_marginRight="45px"
	            android:textStyle="bold|italic"
	            />
	        <TextView 
	            android:id="@+id/message_manager"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="67.5px"
	            android:lineSpacingExtra="7.5px"
	            android:textStyle="bold"
	            android:visibility="invisible"
	            android:gravity="right"/>
	            
	    	</LinearLayout>
	</FrameLayout>
	<FrameLayout 
	    android:id="@+id/time_weather"
        android:layout_width="900px"
        android:layout_height="300px"
        android:layout_marginLeft="1200px"
        android:layout_marginTop="-60px"
	    >
	    <LinearLayout 
	        android:layout_width="570px"
	        android:layout_height="300px"
	        android:gravity="center"
	        android:layout_gravity="center"
	        >
	        <LinearLayout 
	            android:layout_width="300px"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right|bottom"
		            android:gravity="right|bottom"
		            android:layout_marginBottom="-15px"
		            >
		            <ImageView
                        android:id="@+id/hotel_weather_icon"
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"  
						/>
		            <TextView
		                android:id="@+id/hotel_weather_temperture"
		                android:gravity="center" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/white"
		                android:textSize="42px"
		                android:layout_gravity="center"
		                />
		        </LinearLayout>
		        <TextView
		            android:id="@+id/hotel_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@color/white" />
	        </LinearLayout>
		    <TextView
	            android:id="@+id/hotel_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="@color/white"
	            android:textSize="102px" 
	            />		        
	    </LinearLayout>        	    
	</FrameLayout>
</RelativeLayout>
