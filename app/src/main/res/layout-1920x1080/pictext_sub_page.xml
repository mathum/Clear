<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/picTet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/picText_pic_border"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/main_page_top_box"
            android:visibility="invisible" />
        
        <com.clearcrane.util.MarqueeTextView
            android:id="@+id/picText_name"
            android:layout_width="770px"
            android:layout_height="match_parent"
            android:layout_marginLeft="105px"
            android:layout_marginBottom="30px"
            android:gravity="left|center"
            android:text="we12e21"
            android:textSize="25px" />

        <TextView
            android:id="@+id/picText_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="900px"
            android:layout_marginBottom="30px"
            android:gravity="center"
            android:textSize="25px" />
    </FrameLayout>

</LinearLayout>