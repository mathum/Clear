<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/application_item_pic"
        android:layout_width="75px"
        android:layout_height="75px"
        android:adjustViewBounds="true" />
    <LinearLayout
        android:id="@+id/application_item"
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/application_item_title"
            android:layout_width="wrap_content"
            android:layout_height="37.5px"
            android:textSize="30px"
            android:gravity="left"
            android:lines="1"
            android:lineSpacingExtra="3px" />
        <TextView
            android:id="@+id/application_item_size"
            android:layout_width="wrap_content"
            android:layout_height="37.5px"
            android:textSize="22.5px"
            android:gravity="left"
            android:lineSpacingExtra="3px" />
    </LinearLayout>
</LinearLayout>
