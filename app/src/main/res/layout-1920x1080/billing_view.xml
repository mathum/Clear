<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/billing_title"
        android:layout_width="fill_parent"
        android:layout_height="300px">
        <LinearLayout 
            android:id="@+id/billing_title_left"
            android:layout_width="300px"
            android:layout_height="300px"
            android:gravity="bottom|right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/billing_title_pic"
                android:layout_width="150px"
                android:layout_height="105px"
                android:adjustViewBounds="true"
                android:layout_gravity="bottom|right" />
            <TextView
                android:id="@+id/billing_title_name"
                android:layout_width="fill_parent"
                android:layout_height="90px"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                android:textSize="45px"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/billing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_alignParentBottom="true"
            android:text="账单查询"
            android:layout_toRightOf="@+id/billing_title_left"/>
        <TextView
            android:id="@+id/billing_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="350px"
            android:textSize="45px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="总计：817" />
        
    </RelativeLayout>
    <ImageView 
        android:id="@+id/billing_baseline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_recommend_baseline"/>
    <ListView
        android:id="@+id/billing_context"
        android:layout_width="wrap_content"
        android:layout_height="600px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="300px"
        android:layout_marginRight="300px"
        android:scrollbars="none"
        android:cacheColorHint="#FFFFFF"
        android:listSelector="@drawable/msg_item_select"
        android:divider="#FFFFFF"
        android:dividerHeight="0px"
        android:transcriptMode="alwaysScroll" />
    
    <LinearLayout 
        android:id="@+id/billing_command"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75px"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/billing_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/message_command"/>
    </LinearLayout>

</LinearLayout>
