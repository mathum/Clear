<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <FrameLayout 
        android:id="@+id/thj_sub_menu_icon_fl"
        android:layout_width="fill_parent"
	    android:layout_height="90px"
	    android:layout_gravity="center_horizontal|bottom"
	    android:layout_marginLeft="0dp"
	    android:layout_marginRight="0dp" >
	    
        <ImageView
	        android:id="@+id/thj_shuiwu_bg_pic"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
        	android:src="@drawable/sub_icon_shuiwu" />
    
        <ImageView
	        android:id="@+id/thj_sub_pic_text_wrapcontent_border"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
	        android:visibility="invisible"
        	android:src="@drawable/button" />
        
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
        
	        <FrameLayout
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical|left" >
			    <ImageView
			        android:id="@+id/thj_sub_pic_text_wrapcontent_pic"
			        android:layout_width="45px"
			        android:layout_height="45px"
			       	android:layout_gravity="center_horizontal|right"
			        android:adjustViewBounds="true"/>
			    <ImageView
			        android:id="@+id/thj_sub_pic_text_wrapcontent_pic_focus"
			        android:layout_width="45px"
			        android:layout_height="45px"
			       	android:layout_gravity="center_horizontal|right"
			        android:adjustViewBounds="true"/>
		    </FrameLayout>
		    <TextView 
		        android:id="@+id/thj_sub_pic_text_wrapcontent_text"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:gravity="center"
		        android:lines="1"
		        android:textSize="45px" />
	    </FrameLayout>
	</FrameLayout>


    <!-- following the second icon list ... -->

</LinearLayout>
