<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328px"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_gravity="center">

<FrameLayout
    android:id="@+id/videoTemlateset_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="30px"
    android:orientation="vertical" >
 
<ImageView
    android:id="@+id/videoTemlateset_pic_border"
    android:layout_width="328px"
    android:layout_height="202px"
    android:background="@color/white"
    android:visibility="invisible"
    android:layout_gravity="center"
    />  
       
    
<ImageView
    android:id="@+id/videoTemlateset_pic"
    android:layout_width="316px"
    android:layout_height="190px"
    android:layout_gravity="center"
    />
    
<TextView
    android:id="@+id/videoTemlateset_text"
    android:layout_width="316px"
    android:layout_height="42px"
    android:layout_marginTop="154px"
    android:layout_marginLeft="6px"
    android:gravity="top"
    android:background="#a3000000" />

</FrameLayout>

<com.clearcrane.util.MarqueeTextView
    android:id="@+id/videoTemlateset_name"
    android:layout_width="316px"
    android:layout_height="52px"
    android:layout_marginTop="3px"
    android:layout_marginRight="15px"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    />

</LinearLayout>