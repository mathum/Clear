<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/trip_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <TextView 
        android:id="@+id/trip_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27px"
        android:layout_marginTop="868.5px"
        android:layout_marginLeft="945px"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/thj_trip_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1540.5px"
        android:layout_marginTop="868.5px"
        android:textColor="@color/white"
        android:textSize="27px" />

    <TextView
        android:id="@+id/thj_trip_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1395px"
        android:layout_marginTop="868.5px"
        android:textColor="@color/white"
        android:textSize="27px" />

    <ImageView
        android:id="@+id/trip_selected_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="195px"
        android:layout_marginTop="240px"
        android:src="@drawable/live_10" />

    <ImageView
        android:id="@+id/trip_selected_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1710px"
        android:layout_marginTop="240px"
        android:src="@drawable/live_11" />

    <LinearLayout
        android:layout_width="309px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="286.5px"
        android:layout_marginTop="174px"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/trip_selected_style"
            android:layout_width="235.5px"
            android:layout_height="153px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/trip_selected_name"
            android:layout_width="235.5px"
            android:layout_height="45px"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="39px" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thj_trip_linear_style"
        android:layout_width="4000px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="561px"
        android:layout_marginTop="174px"
        android:orientation="horizontal"
         >
    </LinearLayout>
    <TextView 
        android:id="@+id/thj_trip_tag"
        android:layout_width="1005px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="618px"
        android:layout_marginTop="420px"
        android:textSize="39px"
        android:textColor="@color/white"
        />

</FrameLayout>