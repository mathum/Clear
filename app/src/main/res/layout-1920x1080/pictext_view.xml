<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:background="@drawable/tv_series_list_bg_1280" >

    <LinearLayout
        android:id="@+id/picText_Page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/logo_menu"
            android:layout_width="fill_parent"
            android:layout_height="140px"
            android:layout_marginLeft="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/picText_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37.5px"
                android:focusable="true"
                android:textColor="#f0f031"
                android:text=""
                android:textSize="36px" />

            <RelativeLayout
                android:id="@+id/time_logo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/time_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="175.5px"
                    android:layout_marginTop="15px"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/picText_list_layout"
                android:layout_width="360px"
                android:layout_height="match_parent"
                android:layout_marginBottom="42px"
                android:layout_marginLeft="52.5px"
                android:layout_marginTop="22.5px"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/picText_sets_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="42px"
                android:layout_marginRight="60px"
                android:layout_marginTop="22.5px"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="412.5px" >

        <ImageView
            android:id="@+id/gradual_change_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_demand_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pagination"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pagination_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="940px"
            android:layout_marginTop="990px" />
    </RelativeLayout>

</FrameLayout>